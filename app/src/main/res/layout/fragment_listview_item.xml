<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/fragment_listview_imageview"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是最新新闻"
        android:layout_marginTop="10dp"
        android:id="@+id/fragment_listview_title"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:maxEms="10"
        android:maxLines="1"
        android:layout_toRightOf="@+id/fragment_listview_imageview"
        android:layout_toEndOf="@+id/fragment_listview_imageview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-12-14"
        android:id="@+id/fragment_listview_date"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/fragment_listview_imageview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>